generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  password  String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  email     String        @unique
  meals     Meal[]
  calendars Calendar[]
}

model Meal {
  id          Int        @id @default(autoincrement())
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  username    String
  ingredients Ingredient[]
  createdBy   User       @relation(fields: [username], references: [username])
}

model Ingredient {
  id     Int    @id @default(autoincrement())
  name   String
  unit   String
  amount String
  mealId Int
  meal   Meal   @relation(fields: [mealId], references: [id])
}

model Calendar {
  id       Int  @unique    @id @default(autoincrement())
  username  String @unique
  monday String
  tuesday String
  wednesday String
  thursday String
  friday String
  saturday String
  sunday String
  createdBy   User       @relation(fields: [username], references: [username])
  }
